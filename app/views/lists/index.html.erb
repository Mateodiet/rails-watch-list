<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.critikat.com/wp-content/uploads/2010/08/arton3774.jpg), width:100%, height:auto;">
  <div class="container">
    <h1>Welcome to your watchlist</h1>
    <%= link_to "New list", new_list_path, class: "btn btn-ghost" %>
  </div>
</div>





<% @lists.each do |list| %>
<li><%= link_to list.name, list_path(list), class: "" %>
  <%= link_to "Delete",
    list_destroy_path(list), class: "btn btn-flat",
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
  </li>
<% end %>
